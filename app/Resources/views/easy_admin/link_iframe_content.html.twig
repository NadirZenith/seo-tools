{% if view == 'show' %}
    {% if item.responseHeader('Content-Type') in '/html' %}
        <iframe src="{{ url('admin_link_iframe_content', {id: item.id}) }}" width="100%" height="500px"></iframe>
    {% endif %}

    <pre>
        {{ value|nl2br }}
    </pre>
{% else %}
    {{ value|easyadmin_truncate }}
{% endif %}
