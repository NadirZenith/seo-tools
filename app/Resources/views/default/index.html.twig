{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Welcome to</span> SmokeTest Tool with Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</h1>
            </div>

            {#<div id="status">#}
                {#<p>#}
                    {#<svg id="icon-status" width="1792" height="1792" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1671 566q0 40-28 68l-724 724-136 136q-28 28-68 28t-68-28l-136-136-362-362q-28-28-28-68t28-68l136-136q28-28 68-28t68 28l294 295 656-657q28-28 68-28t68 28l136 136q28 28 28 68z" fill="#759E1A"/></svg>#}
                {#</p>#}
            {#</div>#}

            <div id="next">
                <h2>What's next?</h2>
                <div>
                    <b>Enter Urls:</b><small>(one by line)</small><br>
                    {{ form(form) }}

                </div>
                <div>
                    <b>Status:</b> <small>({{ urls|length }} urls)</small><br>
                    <div class="pl5">
                        {% if status is not empty %}
                            {% for code, urls in status  %}
                                <b>code: {{ code }}</b><small>({{ urls|length }} urls)</small><br>
                                <div class="pl5">
                                    {% for url in urls %}
                                        <a href="{{ url }}" target="_blank" title="{{ url }}">{{ url|truncate(85) }}</a>
                                    {% endfor  %}
                                </div>
                            {% endfor  %}
                        {% else  %}
                            <b>nothing done</b>
                        {% endif  %}
                    </div>
                </div>
                <div>
                    <b>url dump:</b><br>
                </div>
            </div>

        </div>
    </div>
{% endblock %}